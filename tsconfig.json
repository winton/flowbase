{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "jest", "better-sqlite3"],
    "outDir": "dist"
  },
  "include": [
    "packages/**/*.ts",
    "tests/**/*.ts"
  ]
} 